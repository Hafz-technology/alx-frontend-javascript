{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": [
    "js/**/*.ts",
    "js/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}